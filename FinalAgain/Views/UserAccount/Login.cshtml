@model LoginUserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta charset="utf-8">
		<title>Looogin</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@300&display=swap" rel="stylesheet">
	<link rel="canonical" href="https://demo-basic.adminkit.io/" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,200;0,300;0,400;1,100;1,200;1,300;1,400&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="~/assets/css/login.css">
	</head>
	<body class="bg-dark">
        <div class="container">
            <div class="row text-center flex-column justify-content-center">
                <div class="main col-6 mx-auto text-center">
                    <div class="logo col-3 mx-auto">
                        <img src="~/assets/images/logo.png" alt="">
                    </div>
                    <form enctype="multipart/form-data" method="post" asp-action="Login">
                        <div class="col-12 d-flex">
                            <div class="col-6 content">
                                <input type="text" class="form-control"  asp-for="UserName" placeholder="UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                             </div>
                             <div class="col-6 content ">
                                 <input type="password" class="form-control"  asp-for="Password" placeholder="Password">
                                 <span asp-validation-for="Password" class="text-danger"></span>
                             </div>
                    </div>
                    <div class="col-12 button mt-3">
                        <button type="submit" >Login</button>
                    </div>
                    </form>
                    <div class="col-12 mt-4 forgetPass">
                        <a asp-action="ForgotPassword" asp-controller="UserAccount">Forgot password?</a>
                    </div>
                    <div class="col-12 mt-2 forgetPass">
                        <a asp-action="register" asp-controller="UserAccount">Register</a>
                    </div>
                </div>
            </div>
        </div>
        
	</body>
</html>

